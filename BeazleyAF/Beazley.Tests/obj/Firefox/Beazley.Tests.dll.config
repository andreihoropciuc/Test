<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="Application" type="Beazley.AutomationFramework.Configuration.ApplicationObjectConfiguration, Beazley.AutomationFramework"/>
  </configSections>
  <appSettings>
    <add key="ApplicationUrl" value="https://beazleyrulebookuat.azurewebsites.net"/>
    
    <!-- Browser Driver in use. Possible values: iexplore, firefox, chrome, opera -->
    <add key="BrowserDriver" value="iexplore"/>
    <add key="BrowserDriversPath" value="\drivers"/>
    <add key="DownloadPath" value="\downloads"/>

    <!-- Log4net logging paths-->
    <add key="Log4NetConfigurationFilePath" value="log4net.config" />
    <add key="LogFileOutput" value="" />
    <add key="ScreenshotOutput" value="screenshots" />
    <!-- Timeouts (in milliseconds) -->
    <add key="PageLoadTimeout" value="60000"/>
    <add key="ImplicitWaitTimeout" value="60000"/>
    <add key="ExplicitWaitDefaultTimeout" value="60000"/>
    <add key="ExplicitWaitDefaultPollingFrequency" value="250"/>
  </appSettings>
  <Application configSource="PageObjects.config"></Application>
</configuration>